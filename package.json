{
  "name": "pool-dings",
  "version": "1.0.6",
  "description": "",
  "main": "dist/src/pool-dings.js",
  "types": "./dist/src/pool-dings.d.ts",
  "engines": {
    "node": ">=6.9.5"
  },
  "scripts": {
    "clean": "rimraf dist",
    "install":"tsc",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc-watch server.ts --outDir ./dist --onSuccess 'node ./dist/server.ts'",
    "pretest": "npm run build",
    "lint": "tslint --project .",
    "test": "mocha dist/test/*-test.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "mabels/pool-dings"
  },
  "license": "AFL-2.0",
  "bugs": {
    "url": "https://github.com/mabels/pool-dings/issues"
  },
  "homepage": "https://github.com/mabels/pool-dings#readme",
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/mocha": ">=5.2.1",
    "chai": "^4.1.1",
    "mocha": ">=2.5.3",
    "rimraf": "^2.6.1",
    "tsc-watch": "^1.0.7",
    "tslint": "^5.6.0",
    "typescript": ">=2.1.5"
  },
  "dependencies": {
    "@types/winston": ">=0.0.32",
    "winston": ">=2.2.0"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
